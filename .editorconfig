# 根配置
root = true

# 通用规则
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

# C# 特定规则
[*.cs]
csharp_style_var_for_builtin_types = true:suggestion
dotnet_sort_system_directives_first = true

# JSON 文件
[*.json]
indent_size = 2

# PowerShell 脚本（如需 BOM）
[*.ps1]
charset = utf-8-bom